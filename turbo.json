{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"],
      "env": ["SOURCIFY_URL", "AWS_S3_ACCESSKEY_ID", "AWS_S3_ACCESSKEY_SECRET"]
    },
    "test": {},
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false
    },
    "web#build": {
      "dependsOn": ["^build"],
      "env": [
        "ADD_NETWORK_PASS",
        "VERCEL_URL",
        "METRICS_API_URL",
        "NEXT_PUBLIC_VERCEL_URL",
        "SOURCIFY_URL",
        "AWS_S3_ACCESSKEY_SECRET",
        "AWS_S3_ACCESSKEY_ID",
        "NODE_ENV",
        "NAMESPACE_ENDPOINT",
        "INTERNAL_INTEGRATION_API_URL",
        "REVALIDATE_TOKEN",
        "ALT_BASE_URL",
        "RESEND_API_KEY",
        "RESEND_EMAIL_SENDER",
        "RESEND_EMAIL_RECEIVER",
        "IBC_API",
        "NEXT_PUBLIC_SVM_METRICS",
        "SVM_DEVNET_RPC_ALTERNATIVE",
        "POSTGRES_URL",
        "POSTGRES_PRISMA_URL",
        "POSTGRES_URL_NON_POOLING",
        "POSTGRES_USER",
        "POSTGRES_HOST",
        "POSTGRES_PASSWORD",
        "POSTGRES_DATABASE",
        "CRON_SECRET",
        "RESEND_API_KEY",
        "RESEND_EMAIL_SENDER",
        "RESEND_EMAIL_RECEIVER",
        "NEXT_PUBLIC_SVM_METRICS",
        "SVM_DEVNET_RPC_ALTERNATIVE",
        "CELESTIA_MAINNET_BACKUP_NODE"
      ]
    },
    "verify#build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"],
      "env": ["SOURCIFY_URL", "AWS_S3_ACCESSKEY_ID", "AWS_S3_ACCESSKEY_SECRET"]
    }
  }
}
